{
  "name": "vietcode",
  "displayName": "VietCode",
  "description": "Help developer to discuss, gen and review code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "files": [
    "media"
  ],
  "contributes": {
    "commands": [
      {
        "command": "vietcode.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "vietcode.generateCode",
        "title": "Generate Code"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vietcode-sidebar",
          "title": "VietCode",
          "icon": "resources/dark/vietcode.svg"
        }
      ]
    },
    "views": {
      "vietcode-sidebar": [
        {
          "type": "webview",
          "id": "vietCodeChatView",
          "name": "Chat"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "vietcode-sidebar",
        "contents": "Welcome to VietCode extension. [Generate Code](command:vietcode.generateCode)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/commonmark": "^0.27.9",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.11.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.2",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.6.0",
    "commonmark": "^0.31.2"
  }
}
